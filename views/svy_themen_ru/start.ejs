</article>

<script>
    const more = document.getElementById("more");
    const expand = document.getElementById("expand")
    document.getElementById("expand").addEventListener("click", () => {
        if (!expand.className.includes("less")) {
            expand.classList.add("less");
            expand.firstChild.textContent = "expand_less";
            more.classList.remove("hidden");
        } else {
            expand.classList.remove("less");
            expand.firstChild.textContent = "expand_more";
            more.classList.add("hidden");
        }
    })

    const readCheck = document.getElementById("read");
    const startBtn = document.getElementById("start-btn");
    readCheck.addEventListener("change", () => {
        if (readCheck.checked === true) {
            startBtn.classList.remove("disabled");
            startBtn.disabled = false;
            console.log("ENABLED! :-)")
        } else {
            startBtn.classList.add("disabled");
            startBtn.disabled = true;
            console.log("DISABLED :-(")
        }
    })
</script>

